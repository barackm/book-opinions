<!DOCTYPE html>
<html>

<head>
    <title>BookOpinions</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
    <div class="flash-messages-main-container <%= "notice" if flash.notice  %> <%= "alert" if flash.alert  %>" data-controller="alert" data-alert-target="flash">
        <p class="message">
            <%= flash.alert %>
            <%= flash.notice %>
        </p>
        <a data-alert-target="close" class="close-notification" data-action="click->alert#closeAlert"><i class="bi bi-x"></i></a>
    </div>
    <div class="application-main-container">

        <% if current_user %>
        <div class="application-sidebar">
            <%= render "shared/sidebar" %>
        </div>
        <%end%>
        <div class="application-wrapper">
            <% if current_user %>
            <%= render "shared/header"%>
            <%end%>
            <%= yield %>
        </div>
    </div>
</body>

</html>