<div class="signup-page-main-container">
    <div class="signup-wrapper">
        <div class="signup-right-side">
            <div class="header">
                <div class="logo-wrapper">
                    <%= image_tag("logo.svg") %>
                </div>
                <div class="title">
                    <h3>Sign up to your account</h1>
                </div>
            </div>
            <%= form_with model: @user do |f| %>
            <div class="form-control">
                <i class="bi bi-person"></i>
                <%= f.text_field :username, placeholder: "Username", autofocus: true %>
            </div>
            <div class="input-error-messages-wrapper login">
                <%if @user.errors[:username][0]%>
                <div class="input-error-message">Username <%= @user.errors[:username][0] %></div>
                <%end %>
            </div>
            <div class="form-control">
                <i class="bi bi-person"></i>
                <%= f.text_field :full_name, placeholder: "Full name" %>
            </div>
            <%if @user.errors[:full_name][0]%>
            <div class="input-error-messages-wrapper login">
                <div class="input-error-message">Full name <%= @user.errors[:full_name][0] %></div>
            </div>
            <%end %>
            <div class="submit-btn">
                <%= f.submit "Signup" %>
            </div>
            <div class="or-divider">
                <div class="line">
                </div>
                <h3 class="or">OR</h3>
                <div class="line">
                </div>
            </div>

            <div class="already-registered">
                <p>
                    <span>Already have an account? </span>
                </p>
                <%= link_to "Login", new_session_path %>
            </div>
            <%end %>
        </div>
        <div class="signup-left-side register">
            <div class='overlay'>
            </div>
        </div>
    </div>
</div>